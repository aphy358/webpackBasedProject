
<!--当季热销-->

<div class="ads-wrap">
    <div class="ads-title-wrap">
        <div class="ads-title-bline"></div>
        <ul>
            <li class="ads-title-item current">当季热销<i></i></li>
        </ul>
        <div class="ads-more-wrap">
            <div>更多</div>
            <div class="ads-more-icon"></div>
        </div>
    </div>

    <ul class="ads-inner-wrap hot-sales">
        <% for(var i = 0; i < 5; i++) {%>
        <li class="ad-one-wrap <%= (i % 5 == 4 ? 'last-child' : '') %>" data-src="<%= arr[i].adLink %>">
            <img src="<%= arr[i].adImg %>" class="too-width" alt="">
            <div class="ad-one-shadow"></div>
            <p class="ad-one-text"><%= arr[i].adTitle %></p>
        </li>
        <% } %>
    </ul>
</div>