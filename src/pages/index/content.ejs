<div class="banner-wrap">
    <!-- banner轮播区域 -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <a href="javascript:void;"><img alt="" src="<%= staticConfig.img.tmp_banner %>"></a>
            </div>
            
        </div>
        <div class="swiper-pagination"></div>
    </div>
</div>

<div class="search-wrap">
    <div class="search-box">
        <ul class="s-tab">
            <li class="s-tab-item current" data-for="s-hotel">
                <div class="sprites sp-jiudian"></div>
                <div class="s-tab-text">酒店</div>
            </li>
            <li class="s-tab-item" data-for="s-ticket">
                <div class="sprites sp-menpiao"></div>
                <div class="s-tab-text">门票</div>
            </li>
            <li class="s-tab-item" data-for="s-wx">
                <div class="sprites sp-shoujiban"></div>
                <div class="s-tab-text">手机版</div>
            </li>
            <li class="p-h"></li>
        </ul>
        <div class="s-box-wrap">
            <!--酒店搜索框-->
            <div class="s-box current" data-target="s-hotel">
                <div class="sbox-hotel">
                    <div class="sbox-hotel-tab">
                        <div class="s-h-item current">国内酒店
                            <i></i>
                        </div>
                        <div class="s-h-item">国际酒店
                            <i></i>
                        </div>
                        <div class="s-h-holder">占坑位...</div>
                    </div>
                    <div class="sbox-hotel-item">
                        <div class="s-h-i-title">目的地</div>
                        <div class="s-h-i-input">
                            <input type="text">
                        </div>
                    </div>
                    <div class="sbox-hotel-item">
                        <div class="s-h-i-title">关键字</div>
                        <div class="s-h-i-input">
                            <input type="text" placeholder="位置 / 酒店名 / 品牌">
                        </div>
                    </div>
                </div>
            </div>

            <!--门票搜索框-->
            <div class="s-box" data-target="s-ticket"></div>

            <!--手机二维码显示框-->
            <div class="s-box" data-target="s-wx"></div>
        </div>
    </div>
</div>